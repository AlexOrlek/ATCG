i=$(expr $SGE_TASK_ID)
sample=$(cat ./output/blastdbfilepaths.tsv | cut -f1 | sed -n ${i}p)
python runpipeline2.py -s ./../../../../../data/apha/fastqs_longread/finalgenomes/output_plasmids/allplasmids.fa -o ./output -t 1 -b 100 --breakpoint --alnlenstats -sn ${sample}
